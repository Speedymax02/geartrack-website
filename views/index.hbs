    <div class="row">
        <div class="col-md-12">
            <h3><span class="label label-default">Estados:</span></h3>
            <table class="table table-striped table-condensed">
                <tr>
                    <th>Data</th>
                    <th>Estado</th>
                    <th>Local</th>
                </tr>
                \{{#each states}}
                <tr>
                    <td>\{{ date }}</td>
                    <td>\{{ info }}</td>
                    <td>\{{ department }}</td>
                </tr>
                \{{/each}}
